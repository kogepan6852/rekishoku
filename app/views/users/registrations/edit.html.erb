<div class="container">
  <div class="row">
    <h2 class="center">ユーザー情報変更</h2>
    <div class="text-center login-form">
      <hr>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <%= f.email_field :email, autofocus: true ,:class => "form-control input-lg", :placeholder => "メールアドレス"  %><br>
        <%= f.password_field :password, autocomplete: "off" ,:class => "form-control input-lg", :placeholder => "パスワード（パスワードを変更しない場合は入力しないでください。*8文字以上）" %><br>
        <%= f.password_field :password_confirmation, autocomplete: "off"  ,:class => "form-control input-lg", :placeholder => "パスワード（確認のためもう一度入力してください）" %><br>
        <%= f.password_field :current_password, autocomplete: "off"  ,:class => "form-control input-lg", :placeholder => "現在のパスワード（更新するために現在のパスワードが必要です）" %><br>

        <%= f.submit "更新する" ,:class => "action btn btn-lg btn-success btn-block" %>
      <% end %>
    <hr>
    <%= link_to "Back", :back ,:class => "action btn btn-lg btn-primary btn-block" %>
    </div>
  </div>
</div>
