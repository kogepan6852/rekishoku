            <div class="container">
              <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                <h2 class="title-position">ユーザー登録</h2>
                  <div class="text-center login-form">
                    <hr>
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                      <%= devise_error_messages! %>

                        <%= f.email_field :email, autofocus: true ,:class => "form-control input-lg users-form", :placeholder => "メールアドレス"  %>
                        <%= f.password_field :password, autocomplete: "off" ,:class => "form-control input-lg users-form", :placeholder => "パスワード 8文字以上" %>
                        <%= f.password_field :password_confirmation, autocomplete: "off"  ,:class => "form-control input-lg users-form", :placeholder => "パスワード 再度入力してください" %>
                        <%= f.submit "登録する" ,:class => "action btn btn-lg btn-success btn-block users-form" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
