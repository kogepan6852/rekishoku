
<h2 class="top-padding-30 center">アカウント登録</h2>

  <div class="text-center login-form">
    <table class="table">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <tr>
          <th><%= f.label :メールアドレス %></th>
          <td><%= f.email_field :email, autofocus: true ,:class => "form-control"  %></td><br>
        </tr>

        <tr>
          <th><%= f.label :パスワード %><% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %></th>
          <td><%= f.password_field :password, autocomplete: "off" ,:class => "form-control" %></td><br>
        </tr>

        <tr>
          <th><%= f.label :パスワード %></th>
          <td><%= f.password_field :password_confirmation, autocomplete: "off" ,:class => "form-control" %></td><br>
        </tr>
    </table>


          <%= f.submit "登録する" ,:class => "action btn btn-blue" %>
        <% end %>


  </div>
