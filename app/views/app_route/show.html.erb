<% if @post.present? %>
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <div class="post-title">
        <h1><%= @post.title %></h1>
        <div class="username">
          <img src="<%= @post.user.image.thumb.url %>">
          <p><%= @post.user.username %></p>
        </div>
        <p class="category"><%= @post.category.name %></p>
        <p class="date"><%= @post.published_at.strftime("%Y/%m/%d")  %></p>
      </div>
      <div class="detail-image"><img src="<%= @post.image.url %>"></div>
      <div class="post-quotation" >
        <% if @post.quotation_url? %>
          掲載元：<a href="<%= @post.quotation_url %>" target="_blank"><%= @post.quotation_name %></a>
        <% end %>
      </div>
      <div class="post-content">
        <%= simple_format(@post.content) %>
      </div>
      <div class="content-mask"></div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
      <%= link_to "続きを見る", 'http://' + request.host_with_port + "/#/app/post/" + @post.id.to_s , class:'btn btn-primary btn-lg btn-block'%>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-fb">
    <div class="fb-page" data-href="https://www.facebook.com/rekishoku/" data-width="500" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true">
      <div class="fb-xfbml-parse-ignore">
        <blockquote cite="https://www.facebook.com/rekishoku/">
          <a href="https://www.facebook.com/rekishoku/">歴食</a>
        </blockquote>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag @vendor_js, @scripts_js %>
