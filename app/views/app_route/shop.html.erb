<% if @data.present? %>
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <div class="post-title">
        <h1><%= @data.name %></h1>
        <p class="category"><%= @categories %></p>
        <% if @address.present? %>
          <a target="_blank" href="http://maps.google.co.jp/maps?t=m&z=16&q=<%= @address %>">
            <i class="fa fa-map-marker"></i> <%= @address %>
          </a>
        <% end %>
      </div>
      <div class="detail-image"><img src="<%= @data.image.url %>"></div>
      <div class="post-quotation" >
        <% if @data.image_quotation_url.present? %>
          掲載元：<a href="<%= @data.image_quotation_url %>" target="_blank"><%= @data.image_quotation_name %></a>
        <% end %>
      </div>
      <div class="post-content">
        <%= simple_format(@data.description) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
      <%= link_to "詳しく見る", 'http://' + request.host_with_port + "/#/app/shop/" + @data.id.to_s , class:'btn btn-primary btn-lg btn-block'%>
    </div>
  </div>
<% end %>

<%= render 'page' %>
