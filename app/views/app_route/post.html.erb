<% if @data.present? %>
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <div class="post-title">
        <h1><%= @data.title %></h1>
        <div class="username">
          <img src="<%= @data.user.image.thumb.url %>">
          <p><%= @data.user.username %></p>
        </div>
        <p class="category"><%= @data.category.name %></p>
        <p class="date"><%= @data.published_at.strftime("%Y/%m/%d")  %></p>
      </div>
      <div class="detail-image"><img src="<%= @data.image.url %>"></div>
      <div class="post-quotation" >
        <% if @data.quotation_url.present? %>
          掲載元：<a href="<%= @data.quotation_url %>" target="_blank"><%= @data.quotation_name %></a>
        <% end %>
      </div>
      <div class="post-content">
        <%= simple_format(truncate(@data.content, length: 200)) %>
      </div>
      <% if @data.content.length >= 200 %>
        <div class="content-mask"></div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
      <%= link_to "続きを見る", 'http://' + request.host_with_port + "/#/app/post/" + @data.id.to_s , class:'btn btn-primary btn-lg btn-block'%>
    </div>
  </div>
<% end %>

<%= render 'page' %>
