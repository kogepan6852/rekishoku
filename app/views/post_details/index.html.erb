<p id="notice"><%= notice %></p>

<h1>Listing Post Details</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>Title</th>
      <th>Image</th>
      <th>Content</th>
      <th>Quotation url</th>
      <th>Quotation name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_details.each do |post_detail| %>
      <tr>
        <td><%= post_detail.post_id %></td>
        <td><%= post_detail.title %></td>
        <td><%= post_detail.image %></td>
        <td><%= post_detail.content %></td>
        <td><%= post_detail.quotation_url %></td>
        <td><%= post_detail.quotation_name %></td>
        <td><%= link_to 'Show', post_detail %></td>
        <td><%= link_to 'Edit', edit_post_detail_path(post_detail) %></td>
        <td><%= link_to 'Destroy', post_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

