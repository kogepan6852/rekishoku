<p id="notice"><%= notice %></p>

<h1 class="center">時代一覧</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>時代名</th>
      <th>詳細</th>
      <th>変更</th>
      <th>削除</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @periods.each do |period| %>
      <tr>
        <td><%= period.name %></td>
        <td><%= link_to '詳細', period ,:class => "btn btn-success" %></td>
        <td><%= link_to '変更', edit_period_path(period) ,:class => "btn btn-success" %></td>
        <td><%= link_to '削除', period, method: :delete, data: { confirm: 'Are you sure?' } ,:class => "btn btn-danger" %></td>
      </tr>
      </tr>
    <% end %>
  </tbody>
</table>

<br><hr>
