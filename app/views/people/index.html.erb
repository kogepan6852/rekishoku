
          <h1 class="text-center">人物一覧</h1>

          <div class="center">
            <tr>
              <td><%= link_to '新規登録', new_person_path ,:class => "btn btn-primary" %></td>
              <!-- <td><%= link_to 'menu', "menu" ,:class => "btn btn-primary" %></td>
              <td><%= link_to "Webサイト表示", "/#/home?showLogin=true",:class => "btn btn-success" %></td> -->
            </tr>
          </div>

          <table class="table table-hover">
            <thead>
              <tr>
                <th>名前</th>
                <th>ふりがな</th>
                <th>詳細</th>
                <th>変更</th>
                <!-- <th>削除</th> -->
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @people.each do |person| %>
                <tr>
                  <td><%= person.name %></td>
                  <td><%= person.furigana %></td>
                  <td><%= link_to '詳細', person ,:class => "btn btn-success" %></td>
                  <td><%= link_to '変更', edit_person_path(person) ,:class => "btn btn-success" %></td>
                  <!-- <td><%= link_to '削除', person, method: :delete, data: { confirm: 'Are you sure?' } ,:class => "btn btn-danger" %></td> -->
                </tr>
              <% end %>
            </tbody>
          </table>

          <div class="center">
            <%= paginate(@people) %>
          </div>

          <hr>
