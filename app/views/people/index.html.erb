
        <!-- パソコン表示用 -->
        <div class="hidden-xs">
          <h1 class="text-center"><i class="fa fa-user"></i>人物一覧</h1>
          <!-- 人物登録 -->
          <%= link_to 'New Person', new_person_path ,:class => "btn btn-primary btn-block" %>
          <!-- 本文 -->
          <table class="table">
            <tr>
              <th>名前</th>
              <th>ふりがな</th>
              <th>詳細</th>
              <th>変更</th>
              <!-- <th>削除</th> -->
            </tr>
          <% @people.each do |person| %>
            <tr>
              <td><%= person.name %></td>
              <td><%= person.furigana %></td>
              <td><%= link_to "<i class='fa fa-file-text-o fa-3x'></i>".html_safe, person %></td>
              <td><%= link_to "<i class='fa fa-pencil-square-o fa-3x'></i>".html_safe, edit_person_path(person) %></td>
              <!-- <td><%= link_to '削除', person, method: :delete, data: { confirm: 'Are you sure?' } ,:class => "btn btn-danger" %></td> -->
            </tr>
          <% end %>
          </table>
          <!-- ページネーション -->
          <%= paginate(@people) %>
          <!-- 人物登録 -->
          <%= link_to 'New Person', new_person_path ,:class => "btn btn-primary btn-block" %>
        </div>

