
        <!-- パソコン表示用 -->
        <div class="hidden-xs people-list">
          <h1 class="title-position"><i class="fa fa-user"></i>PEOPLEトップ</h1>
          <!-- 人物登録 -->
          <div class="text-right">
            <%= link_to "<i class='fa fa-plus'></i>PEOPLE登録".html_safe, new_person_path, :class => "btn btn-default btn-round-lg btn-lg new-padding" %>
          </div>
          <!-- 本文 -->
          <table class="table">
            <tr>
              <td>名前</td>
              <td>ふりがな</td>
              <td class="text-right">詳細</td>
              <td class="text-right">変更</td>
              <td class="text-right">削除</td>
            </tr>
          <% @people.each do |person| %>
            <tr>
              <td class="col-md-3"><%= person.name %></td>
              <td class="col-md-3"><%= person.furigana %></td>
              <td class="col-md-2 text-right fontawesome-icon"><%= link_to "<i class='fa fa-file-text-o fa-3x'></i>".html_safe, person %></td>
              <td class="col-md-2 text-right fontawesome-icon"><%= link_to "<i class='fa fa-pencil-square-o fa-3x'></i>".html_safe, edit_person_path(person) %></td>
              <td class="col-md-2 text-right fontawesome-icon"><%= link_to "<i class='fa fa-trash fa-3x'></i>".html_safe, person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
          </table>
          <!-- ページネーション -->
          <%= paginate(@people) %>
        </div>

        <!-- スマホ表示用 -->
