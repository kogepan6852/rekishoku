<p id="notice"><%= notice %></p>
<h1 class="center">人物詳細</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>名前</th>
      <th>フリガナ</th>
      <th>変更</th>
      <th>戻る</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @person.name %></td>
        <td><%= @person.furigana %></td>
        <td><%= link_to '変更', edit_person_path(@person) ,:class => "btn btn-success" %></td>
        <td><%= link_to '戻る', people_path ,:class => "btn btn-primary" %></td>
      </tr>
  </tbody>
</table>
