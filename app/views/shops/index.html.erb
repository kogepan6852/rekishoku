    <!-- パソコン表示用 -->
    <div class="hidden-xs">
      <!-- タイトル -->
      <h1 class="text-center"><i class="fa fa-home"></i>店舗一覧</h1>
      <!-- 店舗登録 -->
      <%= link_to 'New Shop', new_shop_path ,:class => "btn btn-primary btn-block" %>
      <!-- 本文 -->
      <table class="table table-hover">
          <tr>
            <th>名前</th>
            <th>説明</th>
            <th>都道府県</th>
            <th>市区町村</th>
            <th>その他住所</th>
            <th>詳細</th>
            <th>変更</th>
            <!-- <th>削除</th> -->
          </tr>
        <% @shops.each do |shop| %>
          <tr>
            <td><%= shop.name %></td>
            <td><%= truncate(shop.description, length: 60) %></td>
            <td><%= shop.province %></td>
            <td><%= shop.city %></td>
            <td><%= shop.address1 %></td>
            <td><%= link_to "<i class='fa fa-file-text-o fa-3x'></i>".html_safe, shop %></td>
            <td><%= link_to "<i class='fa fa-pencil-square-o fa-3x'></i>".html_safe, edit_shop_path(shop) %></td>
            <!-- <td><%= link_to '削除', shop, method: :delete, data: { confirm: 'Are you sure?' } ,:class => "btn btn-danger" %></td> -->
          </tr>
        <% end %>
      </table>
      <!-- ページネーション -->
      <%= paginate(@shops) %>
      <!-- 店舗登録 -->
      <%= link_to 'New Shop', new_shop_path ,:class => "btn btn-primary btn-block" %>
    </div>

